<% provide(:title, "Forgot Password") %>
<h1>Forgot Password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path, html: { role: 'form' }) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: I18n.t("placeholders.email") %>
      <%= f.submit I18n.t("labels.send_password_reset_email"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>